Module modCalcular
    ' funcao para somar os valores
    Public Function soma(valor1, valor2) As Integer
        Return valor1 + valor2
    End Function

    ' funcao para subtrair os valores
    Public Function subtrair(valor1, valor2) As Integer
        Return valor1 - valor2
    End Function

    ' funcao para multiplicar os valores
    Public Function multiplicar(valor1, valor2) As Integer
        Return valor1 * valor2
    End Function

    ' funcao para dividir os valores
    Public Function dividir(valor1, valor2) As Integer
        Return valor1 / valor2
    End Function
End Module
